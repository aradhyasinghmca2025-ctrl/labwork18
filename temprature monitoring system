# Temperature Monitoring System

temps = [32, 45, 48, 39, 41]

print("Hottest Day:", max(temps))
print("Coldest Day:", min(temps))

extreme_days = 0

for i in range(len(temps)):
    if temps[i] > 45:
        temps[i] = "Heat Alert"
        extreme_days += 1
    elif temps[i] > 40:
        extreme_days += 1

print("Updated Temperatures:", temps)
print("Extreme Days:", extreme_days)
